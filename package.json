{
  "name": "project-management-prototype",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "build-ts": "tsc",
    "check-ts": "tsc --noEmit",
    "postinstall": "npm run build-ts",
    "start": "npm run serve",
    "lint": "eslint --max-warnings 0 -c ./.eslintrc.js 'src/**/*.{ts,tsx}'",
    "test": "npm run lint",
    "serve": "node ./dist/App.js",
    "dev": "concurrently 'npm run watch-ts' 'npm run watch-node'",
    "watch-node": "nodemon -r dotenv/config ./dist/App.js",
    "watch-ts": "tsc -w"
  },
  "pre-commit": [
    "check-ts",
    "lint"
  ],
  "dependencies": {
    "apollo-server-express": "^2.11.0",
    "bcrypt": "^4.0.0",
    "body-parser": "^1.20.1",
    "class-validator": "^0.11.1",
    "cookie-parser": "^1.4.5",
    "dataloader-sequelize": "^2.1.2",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.2",
    "express-json": "^1.0.0",
    "express-jwt": "^5.3.1",
    "graphql": "^14.1.1",
    "graphql-type-json": "^0.3.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "nodemailer": "^6.4.6",
    "pg": "^8.0.0",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.6",
    "sequelize-typescript": "^1.1.0",
    "type-graphql": "^0.17.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "3.5.30",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv-safe": "^8.1.0",
    "@types/express": "^4.17.4",
    "@types/express-jwt": "0.0.42",
    "@types/graphql-type-json": "^0.3.2",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/node": "^12.12.6",
    "@types/pg": "^7.14.3",
    "@types/sequelize": "^4.28.8",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "apollo": "^2.26.0",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.1.0",
    "cpx": "^1.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "singleQuote": true,
    "parser": "typescript"
  }
}
